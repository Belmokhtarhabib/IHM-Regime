<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Slim"
        android:textColor="#4169F1"
        android:textSize="50dp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre progression"
        android:textColor="#000000"
        android:textSize="30dp"
        ></TextView>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="269dp"
        android:layout_height="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------ Menu ------"
        android:textColor="#000000"
        android:textSize="40dp"
        ></TextView>

    <Button
        android:id="@+id/recherchePlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechercher un plat"
        app:icon="@drawable/magnify"
        app:backgroundTint="#900C3F"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:iconSize="50dp"
        android:textSize="20dp"
        android:width="300dp"
        />

    <Button
        android:id="@+id/conseils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nos conseils"
        app:icon="@drawable/hand_heart"
        app:backgroundTint="#93C47D"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:iconSize="50dp"
        android:textSize="20dp"
        android:width="300dp"
        />

    <Button
        android:id="@+id/suivi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon suivi"
        app:icon="@drawable/calendar_range"
        app:backgroundTint="#6FA8DC"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:iconSize="50dp"
        android:textSize="20dp"
        android:width="300dp"
        />

    <Button
        android:id="@+id/statsEtPoids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats et poids"
        app:icon="@drawable/chart_line"
        app:backgroundTint="#FF9900"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:iconSize="50dp"
        android:textSize="20dp"
        android:width="300dp"
        />

    <Button
        android:id="@+id/succes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SuccÃ¨s"
        app:icon="@drawable/trophy"
        app:backgroundTint="#FFD966"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        app:iconSize="50dp"
        android:textSize="20dp"
        android:width="300dp"
        />

</LinearLayout>