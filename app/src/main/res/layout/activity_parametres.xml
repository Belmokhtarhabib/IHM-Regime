<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ParametresActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

  <FrameLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/header"
      tools:ignore="MissingConstraints" />

  <TextView
      android:id="@+id/textParametre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="104dp"
      android:layout_marginTop="92dp"
      android:layout_weight="1"
      android:text="@string/parametres"
      android:textSize="100sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/buttonModifierMonRegime"
      android:layout_width="263dp"
      android:layout_height="36dp"
      android:layout_marginStart="72dp"
      android:layout_marginTop="80dp"
      android:text="@string/modifier_mon_regime"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textParametre"
      tools:ignore="MissingConstraints" />

  <Switch
      android:id="@+id/ModeSombre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="100dp"
      android:layout_marginTop="28dp"
      android:switchMinWidth="200dp"
      android:switchPadding="20dp"
      android:text="@string/mode_sombre"
      android:textSize="50sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonModifierMonRegime"
      android:checked="false"
      tools:ignore="UseSwitchCompatOrMaterialXml" />


</androidx.constraintlayout.widget.ConstraintLayout>