<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ParametresActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

  <FrameLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/header"
      tools:ignore="MissingConstraints" />

  <TextView
      android:id="@+id/textParametre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/parametres"
      android:textSize="50sp" />

  <Button
      android:id="@+id/buttonModifierMonRegime"
      android:layout_width="263dp"
      android:layout_height="36dp"
      android:text="@string/modifier_mon_regime"
      tools:ignore="MissingConstraints" />

  <Switch
      android:id="@+id/ModeSombre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:switchMinWidth="100dp"
      android:switchPadding="20dp"
      android:text="@string/mode_sombre"
      android:textSize="30sp"
      android:checked="false"
      tools:ignore="UseSwitchCompatOrMaterialXml" />


</LinearLayout>